
@{
    ViewBag.Title = "LoginTemplate";
    Layout = null;
}


<style>
    html {
        font-family: "Lucida Sans", sans-serif;
    }

    * {
        box-sizing: border-box;
        margin-left: 0;
        margin-bottom: 0;
        margin-top: 0;
        margin-right: 0;
    }

    body {
        background-color: #cfebea;
    }


    .header {
    }

    .row::after {
        content: "";
        clear: both;
        display: table;
    }

    [class="logo"] {
        width: 66.66%;
        height: 100%;
        float: left;
        padding: 25px;
    }

    [class="name"] {
        float: left;
        width: 33.33%;
        height: 20%;
        padding: 15px;
        background-color: #548b95;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    [class="form"] {
        float: left;
        width: 33.33%;
        height: 80%;
        background-color: #fff;
        padding: 15px;
    }
</style>

<!DOCTYPE html>
<html>

<body>

    <div class="row">

        <div class="logo">
            <img src="~/Content/Images/ambulance-1674877_1280.png" style='height: 100%; width: 100%; object-fit: contain' />
        </div>

        <div class="name">
            <h1>Crisis Management System</h1>
        </div>
        <div class="form">
            @RenderPage("~/Views/Account/Login")
           

        </div>


    </div>
</body>
</html>




